{
  "name": "@settlemint/solidity-supplychain",
  "version": "4.0.0",
  "description": "An empty Hardhat project",
  "scripts": {
    "lint": "yarn solhint --fix 'contracts/**/*.sol'",
    "compile": "yarn hardhat compile",
    "test": "yarn hardhat test",
    "deploy": "yarn hardhat deploy --network ${DEFAULT_NODE}",
    "deploy:reset": "yarn hardhat deploy --network ${DEFAULT_NODE} --reset",
    "deploy:dev": "yarn hardhat deploy --reset",
    "deploy:local": "yarn hardhat deploy --reset --write true --network localhost",
    "graph:config": "yarn hardhat graph:config --network ${DEFAULT_NODE}",
    "graph:compile": "yarn graph-compiler --config subgraph.config.json --include node_modules/@openzeppelin/subgraphs/src/datasources node_modules/@settlemint/graph-middleware/src/datasources subgraph/datasources --export-schema --export-subgraph",
    "graph:codegen": "yarn graph codegen generated/solidity-supplychain.subgraph.yaml",
    "graph:build": "yarn graph build generated/solidity-supplychain.subgraph.yaml",
    "graph:deploy": "/bin/bash -c 'eval \"$(shdotenv -e ./.secrets/env)\"; if [ \"$MIDDLEWARE\" == \"\" ]; then echo \"You have not launched a graph middleware for this smart contract set, aborting...\"; exit 1; fi; graph create --node ${MIDDLEWARE} ${SCS}; graph deploy --version-label v1.0.0 --node ${MIDDLEWARE} --ipfs ${DEFAULT_IPFS} ${SCS} generated/solidity-supplychain.subgraph.yaml'"
  },
  "author": "SettleMint <hello@settlemint.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "3.0.0",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.2",
    "@typechain/ethers-v5": "9.0.0",
    "@typechain/hardhat": "4.0.0",
    "@types/chai": "4.3.0",
    "@types/lodash": "4.14.178",
    "@types/mocha": "9.1.0",
    "@types/node": "16.11.21",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "chai": "4.3.4",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.3",
    "hardhat": "2.8.3",
    "hardhat-abi-exporter": "2.8.0",
    "hardhat-deploy": "0.9.28",
